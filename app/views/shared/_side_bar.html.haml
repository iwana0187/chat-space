.left-contents__header
  %h3.left-contents__header__user-name
    = current_user.name
  %ul.left-contents__header__user-menu
    %li.left-contents__header__user-menu__user-edit
      = link_to new_group_path do
        = fa_icon 'pencil-square-o', class: 'icon'
    %li.left-contents__header__user-menu__new-group
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'

.left-main
  - current_user.groups.each do |group|
    = link_to group_messages_path(group) do
      .left-main__group-name
        = group.name
      .left-main__new-word
        = group.show_last_message

